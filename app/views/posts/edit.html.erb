<div class="article-form-container">
  <div class="article-form-card">

    <%= simple_form_for(@post, url: post_path(@post), method: 'patch') do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :subtitle %>
        <%= f.input :heading %>
        <%= f.input :content, :input_html => {:style => 'width: 100%', :rows => 50 } %>
        <%= f.input :photo, as: :file %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Post", class: 'devise-btn' %>
      </div>
    <% end %>

  </div>
</div>
